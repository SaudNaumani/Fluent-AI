<div class="wrapper" id="languages" style="min-height: calc(100vh - 200px);">

  <%if (language.name == "english") { %>
    <h3 class="text-center">Choose a topic</h3>
  <%} else if (language.name == "french") {%>
    <h3 class="text-center">Choisir un sujet</h3>
  <%} else if (language.name == "spanish") {%>
    <h3 class="text-center">Elige un tema</h3>
  <%}%>

  <br>
  <div class="container">
    <div class="row">
     <% topics.forEach((topic)=>{ %>
     <div class="col-xs-12 col-sm-3">
      <!-- insert <div class="card"> -->
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('/public/img/topics/<%= topic.picture %>.jpg'); height: 400px;">
          <div class="card-category"><%= topic.difficulty %></div>
          <div class="card-description">
            <h2><%= topic.name %></h2>
          </div>
          <a class="card-link" href="/languages/<%= language.name %>/<%= topic.name %>" ></a>
        </div>
      </div>
      <% }) %>
    </div>
  </div>
</div>
