<div class="login-page">
  <div class="form">
    <h2 class="text-center" style="margin: 0 0 20px 0;">Log in</h2>
    <form class="login-form" method="post" action="/login">
      <input type="text" placeholder="email" name="email" class="fields" />
      <input type="password" placeholder="password" name="password" class="fields"/>
      <input type="submit" value="Log in" class="btn btn-primary" style="color: white;">
      <p class="message">Not registered? <a href="/signup"> Create an account</a></p>
    </form>
  </div>
</div>


<script>
  function disableScroll() {
    const navbar = document.querySelector('.navbar-wagon');
    const navbarLinks = document.querySelectorAll('.navbar-wagon-link');
    navbar.classList.remove('navbar-wagon-white');
    navbarLinks.forEach(link => {
      link.classList.remove('navbar-wagon-link-black');
    });
  }
  disableScroll();
</script>
